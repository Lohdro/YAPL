<!doctype html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if IE 9]>         <html class="no-js lt-ie10"> <![endif]-->
<!--[if gt IE 9]><!--> <html class="no-js"> <!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>{{ page.title }}</title>
    <meta name="description" content="{{ page.description }}">
    <meta name="keywords" content="{{ page.keywords }}">
    <meta name="viewport" content="width=device-width">

    <meta property="og:title" content="{{ page.title }}">
    <meta property="og:description" content="{{ page.description }}">
    <meta property="og:url" content="{{ page.url }}">


    <!-- We'll require the same CSS/JS as the main templates, so load that in as a shared partial (also in footer) -->
    {{> head-css }}

    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,600' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="/css/styleguide.css">

    {{> head-js }}

</head>

<body class="sg-body js-sg-body">

    {{> sg-nav }}

    <div class="sg-content-wrap">

        <header class="sg-header">
            <div class="sg-header__inner l-contain">
                <div class="sg-header__left">
                    <a href="/styleguide/" class="sg-logo"><img src="/images/assets/logo-pennmed-abramson-med.png" alt="Abramson Cancer Center Logo"></a>
                </div>
                <div class="sg-header__right">
                    <button type="button" class="sg-nav-open open-sans open-sans--semibold js-sg-nav-toggle">Menu</button>
                </div>
            </div>
        </header>

        <div class="l-contain">
            <div class="sg-utility cf">
                {{> sg-breadcrumb }}
                <button type="button" class="sg-toggle-all open-sans u-float-r js-sg-toggle-all">
                    <span class="show-if-collapsed">Show</span>
                    <span class="show-if-expanded">Hide</span>
                    All Code/Annotations
                </button>
            </div>
            {{> body }}
            {{> sg-block }}
        </div>

    </div>

    {{> footer-js }}

    <script src="/js/modules/SG.js"></script>

    <!-- build:js /js/vendor/prism.js -->
    <script src="/bower_components/prism/prism.js"></script>
    <!-- endbuild -->

    <script>

        $('.js-sg-nav-toggle').on('click', function() {
            $('.js-sg-body').toggleClass('is-showing-nav');
        });

    </script>

</body>
</html>
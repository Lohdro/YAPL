{{#extend "default-layout"}}

    {{#content "body"}}
        <div class="sg-block">
            <div class="sg-block__header">
                <h2 class="sg-block__title open-sans open-sans--semibold">{{section.name}}</h2>
            </div>
            <div class="sg-block__content sg-u-cf">
                <ul class="sg-block__list">
                {{#each section.modules}}
                    <li>
                        <h3 class="sg-block__header2 open-sans open-sans--semibold">
                            <a class="sg-link" href="{{link}}">{{name}}</a>
                        </h3>

                        <div class="sg-block__notes open-sans">
                            <ul>
                            {{#each blocks}}
                                <li><a class="sg-link" href="{{link}}">{{name}}</a></li>
                            {{/each}}
                            </ul>
                        </div>
                    </li>
                {{/each}}
                </ul>
            </div>
        </div>
    {{/content}}

{{/extend}}
